---
interface Props {
    data: string;
}
const { data } = Astro.props;
---
<div class="flex items-end px-2 mt-4">
    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="15" viewBox="0 0 8 15" fill="none">
        <path d="M0 7.5C4.012 5.70882 5.71852 4.01139 8 0V10.5C4.4246 10.4422 2.6981 9.7329 0 7.5Z" fill="white"/>
    </svg>
    <div class="bg-white lg:w-[600px] md:w-[485px] sm:w-[327px] rounded px-2 py-2 text-[16px] leading-[25.6px]">
        <p>{data}</p>
    </div>
</div>