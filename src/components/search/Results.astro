];

const results_pageA_lg_1 = [
  { name :"Fendy Dress", path: "../../../assets/imgs/dress-1.png", },
  { name :"Prada Dress", path: "../../../assets/imgs/dress-3.png", },
  { name :"Fendy Dress", path: "../../../assets/imgs/dress-1.png", },
  { name :"Prada Dress", path: "../../../assets/imgs/dress-3.png", },
