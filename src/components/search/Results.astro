---

<section 
  class=`bg-white w-full h-full border-gray-300 ${Type == "B" ? "rounded-xl mt-4 sm:overflow-x-auto" : "rounded-br-xl md:overflow-y-auto"} px-4 py-2 flex flex-col gap-6 `
>
  <div class="flex justify-between items-center w-full mt-4">
    <div class="flex gap-2">
      {
        dropdowns.map((dropdown) => {
          return (
            <SearchDropdown title={dropdown.title} options={dropdown.options} />
          );
        })
      }
    </div>
    <div class="bg-slate-500 rounded-[8px] p-[7px] ml-[15px]">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="21"
        viewBox="0 0 20 21"
        fill="none"
      >
        <path
          d="M9.16797 7.16699L17.5013 7.16705"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M9.16797 10.5H17.5013"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M9.16797 13.833H17.5013"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M9.16797 3.83301H17.5013"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M4.58333 18V3M4.58333 18C3.99981 18 2.90961 16.3381 2.5 15.9167M4.58333 18C5.16686 18 6.25706 16.3381 6.66667 15.9167"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
  </div>
  <!-- <div class="flex w-full lg:flex-wrap md:flex-wrap sm:flex-row sm:overflow-x-auto lg:justify-start md:justify-between sm:justify-center gap-4"> -->
  <div id="First" class=`${Type == "B" ? "lg:grid md:grid lg:grid-cols-5 lg:grid-flow-row md:grid-cols-3 md:grid-rows-2 sm:flex" : "lg:grid lg:grid-cols-2 lg:grid-rows-2 md:flex md:flex-col sm:flex" }  
              sm:flex-row sm:overflow-x-auto gap-y-4 lg:gap-x-5 md:gap-8 sm:gap-x-4`>
    {
      Type == "B" ?
      results.map((result) => {
        return <ResultItem name={result.name} order={result.path} />;
      }) :
      results_pageA_lg_1.map((result) => {
        return <ResultItem name={result.name} order={result.path} />;
      })
    }
  </div>
  <div class=`${Type == "B" ? "md:flex" : "md:hidden"} lg:flex sm:hidden flex-row justify-center items-center gap-8`>
    <button type="button" class="min-h-[32px] w-[32px] h-[32px] min-w-[32px] flex justify-center items-center bg-gray-200 text-gray-800 py-2 px-3 text-[16px] leading-[22px] rounded-full focus:outline-none focus:bg-gray-300 disabled:opacity-50 disabled:pointer-events-none dark:bg-gray-600 dark:text-white dark:focus:bg-gray-500" aria-current="page">
      1
    </button>
    <button type="button" class="min-h-[32px] w-[32px] h-[32px] min-w-[32px] flex justify-center items-center text-gray-800 hover:bg-gray-100 py-2 px-3 text-[16px] leading-[22px] rounded-full focus:outline-none focus:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:hover:bg-white/10 dark:focus:bg-white/10"
            >2</button>
    <!-- <button type="button" class="min-h-[32px] min-w-[32px] flex justify-center items-center text-gray-800 hover:bg-gray-100 py-2 px-3 text-[16px] leading-[22px] rounded-full focus:outline-none focus:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:hover:bg-white/10 dark:focus:bg-white/10">3</button> -->
    <div class="hs-tooltip inline-block">
      <button type="button" class="hs-tooltip-toggle group min-h-[32px] w-[32px] h-[32px] min-w-[32px] flex justify-center items-center text-gray-400 hover:text-blue-600 p-2 text-[16px] leading-[22px] rounded-full focus:outline-none focus:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:text-gray-500 dark:hover:text-blue-500 dark:focus:bg-white/10">
        <span class="group-hover:hidden text-[16px] leading-[22px] w-[32px] h-[32px]">•••</span>
        <svg class="group-hover:block hidden flex-shrink-0 w-5 h-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 17 5-5-5-5"/><path d="m13 17 5-5-5-5"/></svg>
        <span class="hs-tooltip-content hs-tooltip-shown:opacity-100 hs-tooltip-shown:visible opacity-0 transition-opacity inline-block absolute invisible z-10 py-1 px-2 bg-gray-900 text-xs font-medium text-white rounded shadow-sm dark:bg-slate-700" role="tooltip">
          Next 2 pages
        </span>
      </button>
    </div>
    <button type="button" class="min-h-[32px] min-w-[32px] w-[32px] h-[32px] flex justify-center items-center text-gray-800 hover:bg-gray-100 py-2 px-3 text-[16px] leading-[22px] rounded-full focus:outline-none focus:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:text-white dark:hover:bg-white/10 dark:focus:bg-white/10">6</button>
  </div>
</section>

