  "../../../assets/imgs/dress-2.png",  
  "../../../assets/imgs/dress-3.png", 
];

const dropdowns = [
  {
    title: "Price Ranges",
    options: ["$5-$25", "$25-50", "$50-100", "$100-$200", "$200-$500", "$500+"],
  },
  { title: "Sizes", options: ["XS", "S", "M", "L", "XL", "XXL"] },
