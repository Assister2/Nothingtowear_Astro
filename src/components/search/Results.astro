---
import ResultItem from "./ResultItem.astro";
import SearchDropdown from "./SearchDropdown.astro";
import Sorting from "../assets/sorting.svg";

const results = [
  "Fendy Dress",
  "Versace Dress",
  "Prada Dress",
  "Balenciaga Dress",
];

const dropdowns = [
  {
    title: "Price Ranges",
    options: ["$5-$25", "$25-50", "$50-100", "$100-$200", "$200-$500", "$500+"],
  },
  { title: "Sizes", options: ["XS", "S", "M", "L", "XL", "XXL"] },
  {
    title: "Color",
    options: ["Red", "Blue", "Green", "Yellow", "Orange", "Purple"],
  },
];
---

<section
  class="bg-white w-full h-full border-gray-300 border-l rounded-br-xl px-4 flex flex-col gap-6"
>
  <div class="flex justify-between items-center mt-4">
    <div class="flex gap-2">
      {
        dropdowns.map((dropdown) => {
          return (
            <SearchDropdown title={dropdown.title} options={dropdown.options} />
          );
        })
      }
    </div>
    <div class="bg-slate-500 p-[0.44rem] rounded-xl">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="21"
        viewBox="0 0 20 21"
        fill="none"
      >
        <path
          d="M9.16797 7.16699L17.5013 7.16705"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M9.16797 10.5H17.5013"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M9.16797 13.833H17.5013"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M9.16797 3.83301H17.5013"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M4.58333 18V3M4.58333 18C3.99981 18 2.90961 16.3381 2.5 15.9167M4.58333 18C5.16686 18 6.25706 16.3381 6.66667 15.9167"
          stroke="white"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
  </div>
  <div class="flex flex-wrap gap-4">
    {
      results.map((result) => {
        return <ResultItem name={result} />;
      })
    }
  </div>
</section>
