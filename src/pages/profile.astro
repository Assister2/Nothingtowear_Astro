---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/index/Footer.astro";
---
<Layout Nav_Type="main">
    <div class="flex flex-col bg-[#ECEEF2] lg:gap-12 md:gap-6 sm:gap-6 lg:py-12 md:py-6 sm:py-0 lg:px-16 md:px-8 sm:px-2">
        <div class="flex flex-col items-center">
            <div class="flex flex-col lg:w-5/8 md:w-3/4 sm:w-full rounded-[12px] border-1-[#D4DAE3]
                        bg-[#FFF] lg:my-[48px] md:my-[48px] sm:my-[24px] sm:mx-6 px-6 py-4">
                <div class="flex flex-col gap-6 text-[16px] leading-[22px] font-semibold text-[#22272F] shadow-pro">
                    <div class="flex flex-col gap-[6px] w-full">
                        <label for="First name" class="block text-[16px] leading-[22px] font-semibold">First name</label>
                        <input type="text" id="First name" 
                            class="block w-full py-[10px] px-[14px] bg-[#FFF] border-[1px] border-[#D4DAE3] text-[16px] leading-[22px] font-semibold
                            disabled:opacity-50 shadow-pro disabled:pointer-events-none rounded-[8px] placeholder-[#22272F]" placeholder="Raka" aria-describedby="hs-input-helper-text">
                    </div>
                    <div class="flex flex-col gap-[6px] w-full">
                        <label for="Last name" class="block text-[16px] leading-[22px] font-semibold">Last name</label>
                        <input type="text" id="Last name" 
                            class="block w-full py-[10px] px-[14px] bg-[#FFF] border-[1px] border-[#D4DAE3] text-[16px] leading-[22px] font-semibold
                            disabled:opacity-50 shadow-pro disabled:pointer-events-none rounded-[8px] placeholder-[#22272F]" placeholder="Danuaji" aria-describedby="hs-input-helper-text">
                    </div>
                    <div class="flex flex-col gap-[6px] w-full">
                        <label for="Last name" class="block text-[16px] leading-[22px] font-semibold">Gender</label>
                        <input type="text" id="Last name" 
                            class="block w-full py-[10px] px-[14px] bg-[#FFF] border-[1px] border-[#D4DAE3] text-[16px] leading-[22px] font-semibold
                            disabled:opacity-50 shadow-pro disabled:pointer-events-none rounded-[8px] placeholder-[#22272F]" placeholder="Male" aria-describedby="hs-input-helper-text">
                    </div>
                    <div class="flex flex-col gap-[6px] w-full">
                        <label for="Email address" class="block text-[16px] leading-[22px] font-semibold">Email address</label>
                        <input type="email" id="Email address" 
                            class="block w-full py-[10px] px-[14px] bg-[#FFF] border-[1px] border-[#D4DAE3] text-[16px] leading-[22px] font-semibold
                            disabled:opacity-50 shadow-pro disabled:pointer-events-none rounded-[8px] placeholder-[#22272F]" placeholder="rakadanuaji.id@gmail.com" aria-describedby="hs-input-helper-text">
                    </div>
                </div>
                <div class="flex py-6 justify-center items-center">
                    <h3 class="text-[16px] text-[#DE3024] leading-[22px] font-bold">Sign Out</h3>
                </div>
            </div>
        </div>
        <Footer bg_color="[#ECEEF2]"/>
    </div>

</Layout>