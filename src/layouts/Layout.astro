---
import Nav from "../components/Nav.astro";
import "@fontsource-variable/inter";
import "@fontsource/roboto";
// import { ThemeProvider } from "../theme-provider";
const { Nav_Type } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Find your next outfit with the help of AI."
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"></script> 
    <!-- <script>import 'bootstrap/dist/js/bootstrap.bundle.min.js';</script> -->
    <title>I Have Nothing to Wear</title>
  </head>
  <body class="bg-[#FFF] min-w-[375px]">
    <!-- <ThemeProvider> -->
    <main>
      <Nav type={Nav_Type}/>
      <slot/>
    </main>
    <!-- </ThemeProvider> -->
  </body>
</html>

<style is:global>
  /* @import 'bootstrap/dist/css/bootstrap.min.css'; */
  :root {
    --gradient-primary: linear-gradient(27deg, #6941c6 0%, #754fd8 100%);
    --gradient-neutral: linear-gradient(27deg, #374151 0%, #506079 100%);
    --gradient-footer: linear-gradient(27deg, #6941C6 8.33%, #754FD8 91.67%);
    --gradient-hero: linear-gradient(48deg, #ecf8fc 0%, #f3e9ff 100%);
    --product-remove: linear-gradient(#647793);
    --linear-purple: linear-gradient(27deg, #53389e 0%, #6941c6 100%);
    --linear-frosted-glass: linear-gradient(
      85deg,
      #fcfcfd 0%,
      rgba(252, 252, 253, 0.8) 99.66%
    );
  }
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  @font-face {
    font-family: "Inter Variable";
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Roboto";
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .gradient-primary-bg {
    background: var(--gradient-primary);
  }

  .gradient-footer-bg{
    background: var(--gradient-footer);
  }
  .gradient-hero-bg {
    background: var(--gradient-hero);
  }
  .product-remove {
    color: var(--product-remove);
  }
  .linear-purple-bg {
    background: var(--linear-purple);
  }

  .linear-frosted-glass {
    background: var(--linear-frosted-glass);
  }

  .button-shadow {
    box-shadow: 0px 4px 16px 0px rgba(0, 0, 0, 0.16);
  }

  .search-button-shadow {
    box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.08);
  }
  /* width */
::-webkit-scrollbar {
    width: 10px;
}
 
/* Track */
::-webkit-scrollbar-track {
    background: #f1f1f1;
}
 
/* Handle */
::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 5px;
}
 
/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
    background: #555;
}
</style>
